{
    "env": {
        "browser": false,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 2019,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["warn", 4],
        "linebreak-style": ["error","unix"],
        "quotes": ["warn","double"],
        "semi": ["warn", "never"],
        "arrow-parens": [
            "error",
            "as-needed"
        ],
        "camelcase": "warn",
        "comma-dangle": "warn",
        "dot-notation": "warn",
        "eqeqeq": [
            "error",
            "smart"
        ],
        "guard-for-in": "warn",
        "id-match": "error",
        "max-len": [
            "warn",
            {
                "code": 120
            }
        ],
        "new-parens": "error",
        "no-bitwise": "error",
        "no-caller": "error",
        "no-cond-assign": "error",
        "no-console": "off",
        "no-debugger": "error",
        "no-empty": "error",
        "no-eval": "error",
        "no-multiple-empty-lines": "off",
        "no-shadow": [
            "error",
            {
                "hoist": "all"
            }
        ],
        "no-trailing-spaces": "warn",
        "no-unused-expressions": "warn",
        "no-unused-labels": "warn",
        "no-var": "error",
        "object-shorthand": "error",
        "prefer-const": "warn",
        "radix": "error",
        "spaced-comment": "warn",
        "use-isnan": "error",
        "valid-typeof": "off"
    }
}
